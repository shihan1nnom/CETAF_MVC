@model CETAF_MVC.Models.Usuario
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <img src="~/Imagenes/Logo.png" width="400" height="200" />
</div>

<div class="row justify-content-md-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header text-center bg-primary">
                LOGIN
            </div>
            <div class="card-body" style="align-self:center">
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    @*@Html.ValidationSummary(true)*@
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Contraseña" })
                        @if (ViewBag.Error != null)
                        {
                            <span class="badge badge-danger">@ViewBag.Error</span>
                        }
                    </div>
                    <div class="form-group justify-content-md-center">
                        <input type="submit" name="submit" class="btn btn-outline-primary" value="Entrar" style="width: 300px" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>


