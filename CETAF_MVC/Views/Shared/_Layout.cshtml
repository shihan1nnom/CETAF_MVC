                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-dark" style="margin: 5px" href="@Url.Action("Index","Home")">TIPO USUARIOS</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-dark" style="margin: 5px" href="@Url.Action("Index","Home")">SEDES</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-dark" style="margin: 5px" href="@Url.Action("Index","Home")">AMBIENTES</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-dark" style="margin: 5px" href="@Url.Action("Index","Home")">ASIGNACIONES</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-dark" style="margin: 5px" href="@Url.Action("Index","Home")">CONSULTAS</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-dark" style="margin: 5px" href="@Url.Action("Index","Home")">COPIA SEGURIDAD</a>
                    </li>
                </ul>
            </div>
            <ul class="navbar-nav form-horizontal">
                <li>
                    <p style="color:orangered">Usuario: @Session["Email"].ToString()</p>
                    <a href="@Url.Action("Logout", "Login")" class="btn btn-outline-primary">Cerrar Sesion</a>
                </li>   
            </ul>
        </nav>
    }

