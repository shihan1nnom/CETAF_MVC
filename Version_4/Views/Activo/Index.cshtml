@model IEnumerable<Version_4.Models.Activo>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col">
    <a href="@Url.Action("Crear","Activo")" class="btn btn-primary btn-light rounded-pill" style="margin-bottom:20px; border:solid">Agregar Activo</a>
    <a href="@Url.Action("Index","Home")" class="icon icon-cerrar" style="align-self:center; border:none; float:right"></a>
</div>

<div style="overflow:scroll">
    <div class="row-cols-1">
        <div class="col">
            <table class="table table-striped table-sm" style="float:inherit">
                <thead class="thead-dark" style="text-align:center;">
                    <tr>
                        <th scope="col" style="min-width:160px; border:solid">Nombre</th>
                        <th scope="col" style="min-width:200px; border:solid">Num. Serie</th>
                        <th scope="col" style="min-width:130px; border:solid">Fecha Compra</th>
                        <th scope="col" style="min-width:120px; border:solid">Valor Compra</th>
                        <th scope="col" style="min-width:120px; border:solid">Vida Util</th>
                        <th scope="col" style="min-width:120px; border:solid">Valor residual</th>
                    </tr>
                </thead>
                <tbody style="text-align:center;">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">@Html.DisplayFor(m => item.Nombre)</td>
                            <td class="align-middle">@Html.DisplayFor(m => item.Num_Serie)</td>
                            <td class="align-middle">@Html.DisplayFor(m => item.Fecha_Compra)</td>
                            <td class="align-middle">@Html.DisplayFor(m => item.Valor_Compra)</td>
                            <td class="align-middle">@Html.DisplayFor(m => item.Vida_Util)</td>
                            <td class="align-middle">@Html.DisplayFor(m => item.Valor_Residual)</td>
                            <td class="align-middle" style="min-width:160px">
                                <a href="@Url.Action("Editar","Activo", new { id=item.ActivoID})" style="margin-right:12px; width:25px; height:25px; margin-left:15px" class="icon icon-editar" data-toggle="tooltip" data-placement="top" title="Editar"></a>
                                <a href="@Url.Action("Detalle","Activo", new { id=item.ActivoID})" style="margin-right:15px; width:25px; height:25px; " class="icon icon-detalle" data-toggle="tooltip" data-placement="top" title="Detalle"></a>
                                <a href="@Url.Action("Eliminar","Activo", new { id=item.ActivoID})" style="margin-right:15px; width:20px; height:20px; " class="icon icon-borrar" data-toggle="tooltip" data-placement="top" title="Eliminar"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

