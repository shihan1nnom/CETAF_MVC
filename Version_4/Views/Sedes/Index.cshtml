@model IEnumerable<Version_4.Models.Sede>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col">
    <a href="@Url.Action("Crear","Sedes")" class="btn btn-primary btn-light rounded-pill" style="margin-bottom:20px; border:solid">Crear Sede</a>
    <a href="@Url.Action("Index","Home")" class="icon icon-cerrar" style="align-self:center; border:none; float:right"></a>
</div>

<div style="overflow:scroll">
    <div class="row-cols-1">
        <div class="col">
            <table class="table table-striped table-sm" style="float:inherit">
                <thead class="thead-dark" style="text-align:center;">
                    <tr>
                        <th scope="col" style="min-width:300px; border:solid">Nombre</th>
                        <th scope="col" style="min-width:300px; border:solid">Ciudad</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.Nombre)</td>
                            <td>@Html.DisplayFor(m => item.Ciudad)</td>
                            <td style="min-width:160px" class="align-middle">
                                <a href="@Url.Action("Editar","Sedes", new { id=item.SedeID})" style="margin-right:12px; width:25px; height:25px; margin-left:15px" class="icon icon-editar" data-toggle="tooltip" data-placement="top" title="Editar"></a>
                                @*<a href="@Url.Action("Detalle","Sedes", new { id=item.SedeID})" style="margin-right:15px; width:25px; height:25px; " class="icon icon-detalle" data-toggle="tooltip" data-placement="top" title="Detalle"></a>*@
                                <a href="@Url.Action("Eliminar","Sedes", new { id=item.SedeID})" style="margin-right:15px; width:20px; height:20px; " class="icon icon-borrar" data-toggle="tooltip" data-placement="top" title="Eliminar"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

