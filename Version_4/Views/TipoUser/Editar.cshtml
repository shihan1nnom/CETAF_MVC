@model Version_4.Models.Tipo_Usuario
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="overflow:auto;">
    <div class="row-cols-1">
        <div class="col">
            <div class="card">
                <div class="card-header text-center bg-dark align-middle" style="color:white; text-shadow:black">
                    <h6 style="font:900">EDITAR TIPOS DE USUARIO</h6>
                </div>
                <div class="card-body" style="align-self:center">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(m => m.TipoUserID)


                        <div class="form-group">
                            @Html.Label("Nombre de categoria:")
                            @Html.TextBoxFor(m => m.Nombre, "", new { @class = "form-control", @placeholder = "Nombre" })
                            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "badge badge-danger" })
                            @if (ViewBag.Error != null)
                            {
                                <span class="badge badge-danger">@ViewBag.Error</span>
                            }
                        </div>
                        <div class="form-check">
                            @Html.Label("Usuario:")
                            @Html.CheckBoxFor(m => m.Usuario, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Usuario, "", new { @class = "badge badge-danger" })
                        </div>
                        <div class="form-check">
                            @Html.Label("Categoria:")
                            @Html.CheckBoxFor(m => m.Categoria, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Categoria, "", new { @class = "badge badge-danger" })
                        </div>
                        <div class="form-check">
                            @Html.Label("Activo:")
                            @Html.CheckBoxFor(m => m.Activo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Activo, "", new { @class = "badge badge-danger" })
                        </div>
                        <div class="form-check">
                            @Html.Label("Tipo usuario:")
                            @Html.CheckBoxFor(m => m.TipoUser, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.TipoUser, "", new { @class = "badge badge-danger" })
                        </div>
                        <div class="form-check">
                            @Html.Label("Sedes:")
                            @Html.CheckBoxFor(m => m.Sedes, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Sedes, "", new { @class = "badge badge-danger" })
                        </div>
                        <div class="form-check">
                            @Html.Label("Ambientes:")
                            @Html.CheckBoxFor(m => m.Ambientes, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Ambientes, "", new { @class = "badge badge-danger" })
                        </div>
                        <div class="form-check">
                            @Html.Label("Asignaciones:")
                            @Html.CheckBoxFor(m => m.Asignar, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Asignar, "", new { @class = "badge badge-danger" })
                        </div>
                        <div class="form-check">
                            @Html.Label("Consultas:")
                            @Html.CheckBoxFor(m => m.Consulta, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Consulta, "", new { @class = "badge badge-danger" })
                        </div>
                        <div class="form-check">
                            @Html.Label("Copia de seguridad:")
                            @Html.CheckBoxFor(m => m.CopiaSeguridad, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.CopiaSeguridad, "", new { @class = "badge badge-danger" })
                        </div>
                        <div class="form-row justify-content-center">
                            <input type="submit" name="submit" class="btn btn-outline-primary" value="ACTUALIZAR" style="width: 300px;" />
                        </div>
                    }
                </div>
                <div class="row" style="float:left; margin-left:100px; margin-bottom:30px">
                    <a href="@Url.Action("Index", "TipoUser")" style="margin-right:15px; width:25px; height:25px; margin-left:15px;" class="icon icon-return" data-toggle="tooltip" data-placement="top" title="Regresar a Lista"></a>
                </div>
            </div>
        </div>
    </div>
</div>

