@model IEnumerable<Version_4.Models.Tipo_Usuario>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col">
    <a href="@Url.Action("Crear","TipoUser")" class="btn btn-primary btn-light rounded-pill" style="margin-bottom:20px; border:solid">Crear Tipo User</a>
    <a href="@Url.Action("Index","Home")" class="icon icon-cerrar" style="align-self:center; border:none; float:right"></a>
</div>

<div style="overflow:scroll">
    <div class="row-cols-1">
        <div class="col">
            <table class="table table-striped table-sm" style="float:inherit">
                <thead class="thead-dark" style="text-align:center;">
                    <tr>
                        <th scope="col" style="min-width:200px; border:solid">Nombre</th>
                        <th scope="col" style="min-width:100px; border:solid">Usuario</th>
                        <th scope="col" style="min-width:100px; border:solid">Categoria</th>
                        <th scope="col" style="min-width:100px; border:solid">Activo</th>
                        <th scope="col" style="min-width:100px; border:solid">Tipo User</th>
                        <th scope="col" style="min-width:100px; border:solid">Sedes</th>
                        <th scope="col" style="min-width:100px; border:solid">Ambientes</th>
                        <th scope="col" style="min-width:100px; border:solid">Asignaciones</th>
                        <th scope="col" style="min-width:100px; border:solid">Consultas</th>
                        <th scope="col" style="min-width:100px; border:solid">Backup</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@Html.DisplayFor(m => item.Nombre)</td>
                        <td>@Html.DisplayFor(m => item.Usuario)</td>
                        <td>@Html.DisplayFor(m => item.Categoria)</td>
                        <td>@Html.DisplayFor(m => item.Activo)</td>
                        <td>@Html.DisplayFor(m => item.TipoUser)</td>
                        <td>@Html.DisplayFor(m => item.Sedes)</td>
                        <td>@Html.DisplayFor(m => item.Ambientes)</td>
                        <td>@Html.DisplayFor(m => item.Asignar)</td>
                        <td>@Html.DisplayFor(m => item.Consulta)</td>
                        <td>@Html.DisplayFor(m => item.CopiaSeguridad)</td>
                        <td style="min-width:160px">
                            <a href="@Url.Action("Editar","TipoUser", new { id=item.TipoUserID})" style="margin-right:12px; width:25px; height:25px; margin-left:15px" class="icon icon-editar" data-toggle="tooltip" data-placement="top" title="Editar"></a>
                            @*<a href="@Url.Action("Detalle","TipoUser", new { id=item.TipoUserID})" style="margin-right:15px; width:25px; height:25px; " class="icon icon-detalle" data-toggle="tooltip" data-placement="top" title="Detalle"></a>*@
                            <a href="@Url.Action("Eliminar","TipoUser", new { id=item.TipoUserID})" style="margin-right:15px; width:20px; height:20px; " class="icon icon-borrar" data-toggle="tooltip" data-placement="top" title="Eliminar"></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

