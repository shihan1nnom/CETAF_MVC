@model IEnumerable<Version_4.Models.Usuario>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col">
    <a href="@Url.Action("Crear","Usuario")" class="btn btn-primary btn-light rounded-pill" style="margin-bottom:20px; border:solid">Agregar Usuario</a>
    <a href="@Url.Action("Index","Home")" class="icon icon-cerrar" style="align-self:center; border:none; float:right"></a>
</div>

<div style="overflow:auto">
    <div class="row">
        <div class="col" >
            <table class="table table-striped table-sm" style="margin-left:0px">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Tipo Ident.</th>
                        <th scope="col">Num. Ident.</th>
                        <th scope="col">Telefono</th>
                        <th scope="col">Email</th>
                        <th scope="col">Contraseña</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.Nombre)</td>
                            <td>@Html.DisplayFor(m => item.Apellido)</td>
                            <td>@Html.DisplayFor(m => item.TipoIdent)</td>
                            <td>@Html.DisplayFor(m => item.NumIdent)</td>
                            <td>@Html.DisplayFor(m => item.Telefono)</td>
                            <td>@Html.DisplayFor(m => item.Email)</td>
                            <td>@Html.DisplayFor(m => item.Password)</td>
                            <td>
                                <a href="#" style="margin-right:15px; width:25px; height:25px; margin-left:15px" class="icon icon-editar"></a>
                                <a href="#" style="margin-right:15px; width:25px; height:25px; " class="icon icon-detalle"></a>
                                <a href="#" style="margin-right:15px; width:20px; height:20px; " class="icon icon-borrar"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
</div>


